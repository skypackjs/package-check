{
  "name": "@skypack/package-check",
  "version": "0.2.2",
  "description": "A quality score checker for npm packages.",
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "exports": {
    "import": "./index.esm.mjs",
    "require": "./lib/index.js"
  },
  "bin": {
    "package-check": "./index.bin.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "tsc --noEmit --noUnusedLocals true --noUnusedParameters true"
  },
  "keywords": [
    "skypack",
    "package",
    "quality",
    "lint"
  ],
  "files": [
    "lib"
  ],
  "author": "Fred K. Schott",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.0",
    "@types/yargs": "^15.0.12",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "kleur": "^4.1.3",
    "yargs-parser": "^20.2.3"
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skypackjs/package-check.git"
  },
  "bugs": {
    "url": "https://github.com/skypackjs/package-check/issues"
  },
  "homepage": "https://github.com/skypackjs/package-check#readme"
}
